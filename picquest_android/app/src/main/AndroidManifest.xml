<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.thevhod.picquest">

    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StartVideoActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.GridActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.ChooseTheEndActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.End1VideoActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activity.End2VideoActivity"
            android:screenOrientation="sensorLandscape"/>
    </application>

</manifest>
